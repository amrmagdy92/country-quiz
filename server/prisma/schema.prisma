generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model capitals {
  id      Int     @id @default(autoincrement())
  country String  @db.VarChar(255)
  capital String  @db.VarChar(255)
}

model flags {
  id        Int       @id @default(autoincrement())
  country   String    @db.VarChar(255)
  flag      String    @db.VarChar(255)
}